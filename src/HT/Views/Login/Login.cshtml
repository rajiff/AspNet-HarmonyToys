@model HT.UserViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="EmailID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EmailID" class="form-control" />
                <span asp-validation-for="EmailID" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="SignIn" id="btnhtsignin" class="btn btn-default"/>
                @ViewData["msg"]
            </div>
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Click here for new registration", "Register", "Login",new {mode="new" }, new {Id="btnhtregisternew" })
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
