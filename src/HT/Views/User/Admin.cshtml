@model IEnumerable<HT.UserViewModel.UserApproval>

@{
    ViewData["Title"] = "Admin";
}

<h2>Admin</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Approve
            </th>
            <th>
                Reject
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Approve", "Approve","User", new { id=item.loginid},new { onclick = "return confirm('Are you sure you want to approve?');" })
            </td>
            <td>
                @Html.ActionLink("Reject", "Reject","User", new { id = item.loginid }, new { onclick = "return confirm('Are you sure you want to reject?');" })
            </td>
        </tr>
}
    </tbody>
</table>
